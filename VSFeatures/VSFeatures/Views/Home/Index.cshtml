@model IEnumerable<VSFeatures.Models.Product>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" width="width=device-width" />
    <title>VSFeautures</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <script src="js/bundle.js"></script>
</head>
<body class="p-1">
<h3 class="text-center">Products</h3>
<p>Request Time: @DateTime.Now.ToString("HH:mm:ss")</p>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Price</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Name</td>
            <td>@($"{p.Price:c2}")</td>
        </tr>
    }
    </tbody>
</table>
    <div class="text-center">
        <a class="btn btn-primary" asp-action="AddProduct">
            Add new Product
        </a> 
    </div>
</body>
</html>